<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#323232"
    android:backgroundTint="#41929D"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/heading"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="wrap_content"
        android:layout_height="62dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="128dp"
        android:layout_marginTop="316dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="405dp"
        android:fontFamily="serif-monospace"
        android:paddingEnd="3dp"
        android:paddingBottom="4dp"
        android:text="FACE DETECTOR"
        android:textColor="@color/black"
        android:textSize="34sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/iv"
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:layout_marginHorizontal="100dp"
        android:src="@drawable/img" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="390dp"
        android:backgroundTint="@android:color/system_accent3_700"
        android:padding="15dp"
        android:text="Open Camera"
        android:textAllCaps="true"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="63dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="279dp"
        android:text="          Tips :"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv5"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="69dp"
        android:layout_marginEnd="21dp"
        android:text="When camera is on ,smile and click the image "
        android:textColor="@color/black"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="89dp"
        android:layout_marginEnd="115dp"
        android:text="retake image if not satisfied"
        android:textColor="@color/black"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/tv7"
        android:layout_width="352dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="56dp"
        android:layout_marginTop="108dp"
        android:layout_marginEnd="3dp"
        android:text="As soon as you caonfirm image the result will be shown"
        android:textColor="@color/black"
        android:textStyle="bold|italic" />

    <ImageView
        android:id="@+id/iv2"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_below="@+id/iv"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="180dp"
        app:srcCompat="@drawable/face1" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="190dp"
        android:layout_height="30dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="127dp"
        android:layout_marginEnd="98dp"
        android:layout_marginBottom="80dp"
        android:text="By Omkar Mandave"
        android:textSize="20sp"
        android:textStyle="bold" />


</RelativeLayout>